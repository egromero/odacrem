<p id="notice"><%= notice %></p>

<h1>Allocations</h1>

<table>
  <thead>
    <tr>
      <th>Demand id</th>
      <th>User id</th>
      <th>Amount</th>
      <th>Promised at</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @allocations.each do |allocation| %>
      <tr>
        <td><%= allocation.demand_id %></td>
        <td><%= allocation.user_id %></td>
        <td><%= allocation.amount %></td>
        <td><%= allocation.promised_at %></td>
        <td><%= allocation.status %></td>
        <td><%= link_to 'Show', allocation %></td>
        <td><%= link_to 'Edit', edit_allocation_path(allocation) %></td>
        <td><%= link_to 'Destroy', allocation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Allocation', new_allocation_path %>
