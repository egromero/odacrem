<div class="container" style="padding-top:200px">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Registrar</h3>
                </div>
                <div class="panel-body">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                    <fieldset>
                        <div class="form-group">
                            <%= f.label :first_name, "Información personal" %><br />
                            <%= f.text_field :first_name, autofocus: true, autocomplete: "firstName", class: "form-control", placeholder: "Nombre"%>
                        </div>
                        <div class="form-group">
                            <%= f.text_field :last_name, autofocus: true, autocomplete: "lastName", class: "form-control", placeholder: "Apellido"%>
                        </div>
                        <div class="form-group">
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Correo electrónico"%>
                        </div>

                        <div class="form-group">
                            <%= f.label :password, "Ingresa una contraseña" %><br />
                            <% if @minimum_password_length %>
                            <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
                            <% end %><br />
                            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Contraseña" %>
                        </div>

                        <div class="form-group">
                            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Reingresar contraseña" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :type_of_user, "Selecciona tipo de usuario*" %>
                            <%= f.select :type_of_user, options_for_select(["Fabricante", "Benefactor"]), {}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
                        </div>
                        <p> *Si representas un hospital, debes crear un usuario con el nombre del hospital y con cualquier tipo de usuario. Luego de acceder puedes solicitar representar un hospital. </p>

                        <div class="actions">
                            <%= f.submit "Registrar", class:'btn btn-lg btn-secondary btn-block' %>
                        </div>
                        <br />
                        <div>
                            <a href="/users/sign_in" style="align-text:right">¿Ya tienes una cuenta? Ingresa</a>
                        </div><br />
                    </fieldset>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>