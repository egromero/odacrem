<!-- app/views/users/hispital_requests.html.erb -->
<html>
  <body>

  <table>
  <thead>
    <tr>
      <td>User ID</td>
      <td>First Name</td>
      <td>Last Name</td>
      <td>Email</td>
      <td></td>
    </tr>
  </thead>

  <tbody>
    <% @result.each do |request| %>
      <tr>
        <td><%= request["id"] %></td>
        <td><%= request["first_name"] %></td>
        <td><%= request["last_name"] %></td>
        <td><%= request["email"] %></td>
        <td><%= link_to 'Accept', accept_request_path(:id => request["id"]) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


  </body>
</html>